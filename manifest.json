{
  "manifest_version": 2,

  "name": "Rose Colored Comments",
  "description": "This extension allows you to display YouTube comments.",
  "version": "1.0",

  "permissions": [
    "tabs", "https://www.youtube.com/*"
  ],

  "browser_action": {
    "default_icon": "imgs/icon.png",
    "default_popup": "html/popup.html"
  },

  "content_security_policy": "script-src 'self' https://apis.google.com https://gdata.youtube.com; object-src 'self'",

  "content_scripts": [
    {
      "matches": [ "https://www.youtube.com/*" ],

      "css": [ "stylesheets/popup.css" ],

      "js": [ "javascripts/jquery-2.1.1.min.js", "javascripts/namespace.js", "javascripts/rosecoloredcomments.js", "javascripts/model.js", "javascripts/view.js", "javascripts/controller.js" ]
    }
  ]
}